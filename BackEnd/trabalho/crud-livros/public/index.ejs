<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>CRUD de Livros</title>
    <!-- Conecta o CSS -->
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Gerenciador de Livros</h1>
    <div style=" max-width: 900px;margin: 0 auto;">
    <!-- Formulário para adicionar/editar livros -->
    <form id="form-livro" action="/livros" method="POST">
        <input type="hidden" id="id" name="id">
        <label for="titulo">Título:</label>
        <input type="text" id="titulo" name="titulo" required>
        <br><br>

        <label for="autor">Autor:</label>
        <input type="text" id="autor" name="autor" required>
        <br><br>

        <label for="ano">Ano:</label>
        <input type="number" id="ano" name="ano" required>
        <br><br>

        <label for="genero">Gênero:</label>
        <select id="genero" name="genero" required>
            <option value="">Selecione...</option>
            <option value="Ficção">Ficção</option>
            <option value="Não-ficção">Não-ficção</option>
            <option value="Fantasia">Fantasia</option>
        </select>
        <br><br>
        <div style="text-align: center;">
            <button type="submit">Salvar Livro</button>
            <button type="button" id="btn-cancelar" style="display: none;">Cancelar</button>
        </div>

    </form>
    <hr>
    <!-- Lista de livros -->
    <h2>Livros Cadastrados</h2>
    <hr>
    <table>
        <thead>
            <tr>
                <th>Título</th>
                <th>Autor</th>
                <th>Ano</th>
                <th>Gênero</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody id="lista-livros">
            <% livros.forEach(livro => { %>
                <tr data-id="<%= livro.id %>">
                    <td><b> <%= livro.titulo %></b></td>
                    <td><%= livro.autor %></td>
                    <td><%= livro.ano %></td>
                    <td><%= livro.genero %></td>
                    <td>
                        <button class="btn-editar">Editar</button>
                        <button class="btn-excluir">Excluir</button>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    </div>



    <!-- Conecta o JavaScript -->
    <script src="/script.js"></script>
</body>
</html>
